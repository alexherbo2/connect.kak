#!/bin/sh

commands=''
while test $# -gt 0; do
  file=$(realpath "$1")
  # Optional coordinates
  case "$2" in
    +*:*)
      line=${2#+}; line=${line%:*}
      column=${2#*:}
      shift 2
      commands="edit %{$file} $line $column; $commands"
      ;;
    +*)
      line=${2#+}
      shift 2
      commands="edit %{$file} $line; $commands"
      ;;
    *)
      shift
      commands="edit %{$file}; $commands"
      ;;
  esac
done

send "$commands"
